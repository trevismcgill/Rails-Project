<%= form_with model: @character, local: true do %>
    <%= label_tag(:name, "Name" ) %>
    <br>
    <%= text_field(:character, :name) %>
    <br>
    <%= label_tag(:race, "Race") %>
    <br>
    <%= select(:character, :race, Character.race_options) %>
    <br>
    <%= label_tag(:class, "Class") %>
    <br>
    <%= select(:character, :character_class, Character.class_options) %>
    <br>
    <%= label_tag(:level, "Level") %>
    <br>
    <%= select(:character, :level, Character.level_options) %>
    <br>
    <%= label_tag(:campaign, "Which campaign do you wish to join?") %>
    <br>
    <%= collection_select(:character, :campaign_id, Campaign.all, :id, :campaign_name) %>
    <br>
    <%= submit_tag @character.persisted? ? "Edit Character" : "Create Character" %>
<% end %>